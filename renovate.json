{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:best-practices",
		":approveMajorUpdates",
		":rebaseStalePrs",
		":maintainLockFilesWeekly",
		":automergePatch",
		":automergeRequireAllStatusChecks",
		"helpers:pinGitHubActionDigestsToSemver",
		"schedule:weekends",
		":prConcurrentLimit10",
		":prHourlyLimit2",
		":label(dependencies)"
	],
	"internalChecksFilter": "strict",
	"minimumReleaseAge": "7 days",
	"packageRules": [
		{
			"matchManagers": [
				"*"
			],
			"addLabels": [
				"{{ manager }}"
			]
		},
		{
			"description": "Update Hugo Docker image in statichost.yml",
			"matchManagers": [
				"dockerfile"
			],
			"matchPackageNames": [
				"hubci/hugo"
			],
			"matchFileNames": [
				"statichost.yml"
			],
			"groupName": "Hugo updates"
		},
		{
			"description": "Update Hugo version in mise.toml",
			"matchManagers": [
				"aqua"
			],
			"matchPackageNames": [
				"gohugoio/hugo"
			],
			"matchFileNames": [
				"mise.toml"
			],
			"groupName": "Hugo updates"
		}
	]
}
