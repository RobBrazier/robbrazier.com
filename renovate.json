{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:best-practices",
		":approveMajorUpdates",
		":rebaseStalePrs",
		":maintainLockFilesWeekly",
		":automergePatch",
		":automergeRequireAllStatusChecks",
		"helpers:pinGitHubActionDigestsToSemver",
		"schedule:weekends",
		":prConcurrentLimit10",
		":prHourlyLimit2",
		":label(dependencies)"
	],
	"internalChecksFilter": "strict",
	"minimumReleaseAge": "7 days",
	"packageRules": [
		{
			"matchManagers": [
				"*"
			],
			"addLabels": [
				"{{ manager }}"
			]
		},
		{
			"groupName": "hugo",
			"matchManagers": [
				"mise"
			],
			"matchDepNames": [
				"aqua:gohugoio/hugo/hugo-extended"
			]
		},
		{
			"groupName": "hugo",
			"matchManagers": [
				"regex"
			],
			"matchDepNames": [
				"hubci/hugo"
			]
		}
	],
	"customManagers": [
		{
			"customType": "regex",
			"datasourceTemplate": "docker",
			"managerFilePatterns": [
				"/(^|/|\\.)statichost.yml$/"
			],
			"matchStrings": [
				"image: (?<depName>.*?):(?<currentValue>[\\w+\\.\\-*]*)"
			]
		}
	]
}
